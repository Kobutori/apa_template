{
  "name": "apa_template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-s clean copy build:*",
    "build:scss": "node-sass --importer node_modules/node-sass-glob-importer/dist/cli.js -o build src/common/scss/apa.scss build/common/css/apa.css" ,
    "build:postcss": "postcss build/common/css/apa.css -o build/common/css/apa.css -m -u autoprefixer css-mqpacker csswring",
    "watch": "run-p watch:*",
    "watch:scss": "node-sass src/common/scss/apa.scss build/common/css/apa.css -w",
    "watch:postcss": "postcss build/common/css/apa.css -o build/common/css/apa.css -m -u autoprefixer css-mqpacker csswring -w",
    "watch:static": "cpx src/**/*.html build -w",
    "watch:image": "cpx src/**/*.{jpg,gif,png} build -w",
    "dev": "run-p watch:scss",
    "copy": "run-p copy:*",
    "copy:html": "cpx src/**/*.html build",
    "copy:content": "cpx src/**/*.{jpg,gif,png,mp4} build",
    "copy:libcss": "cpx src/common/scss/lib/*.css build/common/css",
    "copy:js": "cpx src/**/*.js build",
    "clean": "rimraf build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "glob": "^7.1.3",
    "node-sass": "^4.11.0",
    "node-sass-glob-importer": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "rimraf": "^2.6.3"
  },
  "browserslist": [
    "last 1 versions",
    "not ie < 11",
    "Android >= 4",
    "iOS >= 10"
  ]
}
